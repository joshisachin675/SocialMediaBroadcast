                });
                // Add the button to the file preview element.
                file.previewElement.appendChild(removeButton);
                $('#watermark').hide();
                $('#removeWatermark').hide();
            });
        }
    };


    function countChar(val) {

        var len = val.value.length;
        if (len == 140) {
            debugger;
            var popTimer = parseInt($("#hdnPopUpTimer").val()); setTimeout("$.each(BootstrapDialog.dialogs, function(id, dialog){dialog.close();});", popTimer);
            BootstrapDialog.configDefaultOptions({ cssClass: 'bstDialg' });
            BootstrapDialog.alert({ title: "<span>Information</span>", type: BootstrapDialog.TYPE_SUCCESS, message: 'You can,t post more than 140 character in Twitter!' });
           
            val.value = val.value.substring(0, 140);
        }
        else {
            $('#charNumtwitter').html("<span class='fa fa-twitter text-info' ></span>  Twitter ").append(140 - len);
        }
        if (len == 600) {

            val.value = val.value.substring(0, 600);
            
            var popTimer = parseInt($("#hdnPopUpTimer").val()); setTimeout("$.each(BootstrapDialog.dialogs, function(id, dialog){dialog.close();});", popTimer);
            BootstrapDialog.configDefaultOptions({ cssClass: 'bstDialg' });
            BootstrapDialog.alert({ title: "<span>Information</span>", type: BootstrapDialog.TYPE_SUCCESS, message: 'You can,t post more than 600 character in LinkedIn!' });
        }
        else {
            $('#charNumLinkedIn').html("<span class='fa fa-linkedin text-info' ></span>  LinkedIn ").append(600 - len);
        }

        if (len > 140) {

            $("#charNumtwitter").css("color", "red");
            $("#imagtw").removeClass("selected");
            //    $("#charNumtwitter").addClass("errorClass");

        }
        else {
            $("#charNumtwitter").css("color", "#777");
        }
        if (len > 600) {
            debugger
            //  $("#charNumLinkedIn").addClass("errorClass");
            $("#charNumLinkedIn").css("color", "red");
            $("#imagtw").removeClass("selected");
        }
        else {
            $("#charNumLinkedIn").css("color", "#777");
        }

        if (len >= 2000) {
            val.value = val.value.substring(0, 2000);
        } else {
            $('#charNum').html("<span class='fa fa-facebook text-primary' ></span>  Facebook ").append(2000 - len);
        }               //$(".drag_drp_file").tooltip()

    };
</script>
