@using smartData.Common

@{
    ViewBag.Title = "::No Permission::";
    Layout = "~/Views/Shared/_UserOuterLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    @System.Web.Optimization.Styles.Render("~/bundles/bootstrapCss")

    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrapgrid")
    <script>

        $(document).ready(function () {
            BootstrapDialog.show({
                message: 'You are not authorized to view this page.',
                buttons: [{
                    label: 'Ok',
                    cssClass: 'btn-primary',
                    action: function (dialogItself) {
                        var url = $("#RedirectTo").val();
                        location.href = url;
                    }
                }]
            });



        });
    </script>
</head>
<body>
    <div>
        @*<h3>You are not authorized for this section. Please click to go back.</h3>*@
        
        @if (SessionManager.LoggedInUser.UserType == 1)
        {
            @Html.Hidden("RedirectTo", Url.Action("index", "Home", new { area = "Users" }));
            @*<a href="@Url.Action("Index", "Home", new { area = "Users" })">Go Back</a>*@
        }
        else if (SessionManager.LoggedInUser.UserType == 2)
        {
            @Html.Hidden("RedirectTo", Url.Action("index", "Home", new { area = "Admin" }));
            @*<a href="@Url.Action("Index", "Home", new { area = "Admin" })">Go Back</a>*@
        }

        @*@Html.Hidden("RedirectTo", Url.Action("index", "Home", new { area = "" }));*@
    </div>
    <style>
        .modal-dialog { margin-left:-300px;}
    </style>
</body>
</html>
