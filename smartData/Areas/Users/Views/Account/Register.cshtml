@model smartData.Models.RegisterViewModel

@{
    ViewBag.Title = "::Register::";
    Layout = "~/Views/Shared/_UserOuterLayout.cshtml";
}

@section CSSLinks
    {
   
}
<script src="~/Scripts/User/register.js"></script>
<script src="~/Scripts/Jscripts/confirm.js"></script>
<link href="~/Content/confirm.css" rel="stylesheet" />


@System.Web.Optimization.Scripts.Render("~/bundles/bootstrapgrid")
<style>
    .modal-dialog {
        margin-left: -300px;
    }

    .modal-header {
        color: #ffffff;
        background-color: #3276b1;
        border-color: #285e8e;
    }

    body {
        padding-top: 0px !important;
    }

    .shrtcls {
        color: #ff0000;
        display: block;
        font-size: 12px;
        line-height: 22px;
    } 


</style>




<script>
    $(document).ready(function () {
        debugger;
        var msg = $("#message").val();
        if (msg == "success") {
            $.confirm({
                title: 'Congratulations!',
                content: 'Your account has been registered please login to continue.',
                type: 'green',
                typeAnimated: true,
                buttons: {
                    close: function () {
                    }
                }
            });
        }
        if (msg == "error") {
            $.confirm({
                title: 'Encountered an error!',
                content: 'Something went wrong.',
                type: 'red',
                typeAnimated: true,
                buttons: {
                    close: function () {
                    }
                }
            });
        }
    })
</script>


<input type="hidden" value="@TempData["Message"]" id="message" /> 

<section class="main-container fit-assemnt-step-first thankyoubg">
    <section class="login-box">
        <h2> <img src="@Url.Content("~/Images/logo.png")"> </h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "AddUser" }))
        {
            @Html.AntiForgeryToken()

            @*@Html.ValidationSummary()*@

            <ul>
                <li>
                    @Html.Label("First Name", new { @class = "" })
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </li>
                <li>
                    @Html.Label("Last Name", new { @class = "" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </li>
                <li>
                    @Html.Label("Email", new { @class = "" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </li>

                @if (@ViewBag.industry == "true")
                {

                }
                else
                {
                    <li>
                        @Html.Label("Industry Name", new { @class = "" })
                        @Html.DropDownListFor(m => m.IndustryName, (SelectList)@ViewBag.IndustryName, "Select Industry Name", new { id = "industry" })
                        @Html.ValidationMessageFor(m => m.IndustryName)
                    </li>
                }


                @*<li>
                    @Html.Label("Industry Name", new { @class = "" })
                    @Html.DropDownListFor(m => m.IndustryName, (SelectList)@ViewBag.IndustryName, "Select Industry Name", new { id = "industry" })
                    @Html.ValidationMessageFor(m => m.IndustryName)
                </li>*@

                @*<li>
                    @Html.Label("Short Name", new { @class = "" })
                    @Html.TextBoxFor(m => m.ShortName, new { @class = "" })
                    @Html.ValidationMessageFor(m => m.ShortName)
                    <div id="shortnameerror" class="shrtcls"></div>
                </li>*@

                <li>
                    @Html.Label("Password", "Password (min 8 characters)", new { @class = "" }) 
                    @Html.PasswordFor(m => m.Password, new { @class = "", minlength = "8", maxlength = "12" })
                    @Html.ValidationMessageFor(m => m.Password)
                    @*<span id="result"></span>*@
                </li>
               
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "", minlength = "8", maxlength = "12" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)

                </li>

                <li>
                    <input type="submit" id="registerSubmit" class="bluebtn" value="Sign Up" />
                </li>


                @if (@ViewBag.industry == "true")
                {
                     <li>
                         <a href="/@ViewBag.Realtor/login">Create a new account</a>
                    </li>
                }
                else
                {
                     <li>
                        @Html.ActionLink("Already a client? Click here to Sign In", "Login")
                    </li>
                }



               
            </ul>
        }
    </section>
</section>

