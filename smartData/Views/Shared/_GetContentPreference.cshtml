@model Core.Domain.smSubIndustry
@if (Model != null && Model != null)
{

     <input type="checkbox" id="PreferenceCheckall"  class="PreferenceCheckall"  /> <label>Select All </label> <br/>
    for (int i = 0; i < Model.dataList.Count(); i++)
    {
       
        <input type="checkbox" id="PreferenceCheck" class="PreferenceCheck" data-subindustryname="@Model.dataList[i].SubIndustryName" data-subindustryid="@Model.dataList[i].SubIndustryId" />

        @*@Html.CheckBoxFor(m => m.dataList[i].Preference, new { @class = "PreferenceCheck", data_subIndustryId =  })*@
        @Model.dataList[i].SubIndustryName
        @Html.HiddenFor(m => m.dataList[i].SubIndustryId, new { @class = "idSubindustry" })


        <br>
    }


}
<script>

    $(".PreferenceCheckall").change(function () {
        debugger

        if ($(this).is(':checked')) {
            $(".PreferenceCheck").prop('checked', true);
        }
        else {
            $(".PreferenceCheck").prop('checked', false);
        }



    });
</script>
