@model smartData.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @*@Html.ValidationSummary()*@

    <div class="form-group">
        @Html.Label("Name", new { @class = "col-md-2 control-label focus" })
        
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-md-8" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Email", new { @class = "col-md-2 control-label focus" })
        @*@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-8" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-8", maxlength="8" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <span id="result"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-8", maxlength = "8" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Sign Up" />
        </div>
    </div>
}

@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro|Open+Sans+Condensed:300|Raleway' rel='stylesheet' type='text/css'>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script><!-- jQuery Library-->
    <!--Custom-->
    <link href="@Url.Content("~/Content/User/PasswordCheck.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/User/passwordCheck.js")" type="text/javascript"></script>
}
